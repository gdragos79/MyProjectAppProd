# frontend.Dockerfile.prod
# Build React (Vite) and serve static files via Nginx
FROM node:20-alpine AS build
WORKDIR /app
COPY react/package*.json ./
RUN npm ci
COPY react ./
RUN npm run build

FROM nginx:1.27-alpine
# Replace the default site with a basic static host config
RUN rm -f /etc/nginx/conf.d/default.conf
COPY deploy/app/nginx.default.prod.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
